<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="14sp" android:id="@+id/linkingValidatorRowTitleText" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Title" android:layout_weight="0.4"/>
        <Button android:textSize="9sp" android:id="@+id/linkingValidatorRowInfoButton" android:layout_width="0dp" android:layout_height="match_parent" android:text="Info" android:layout_weight="0.2"/>
        <Button android:textSize="9sp" android:id="@+id/linkingValidatorRowActionButton" android:layout_width="0dp" android:layout_height="match_parent" android:text="Share" android:layout_weight="0.2"/>
        <Button android:textSize="9sp" android:id="@+id/linkingValidatorRowDebugButton" android:layout_width="0dp" android:layout_height="match_parent" android:text="Debug" android:layout_weight="0.2"/>
    </LinearLayout>
</LinearLayout>
